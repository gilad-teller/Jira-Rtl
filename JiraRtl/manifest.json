{
  "name": "Jira RTL",
  "version": "1.0",
  "description": "Allow RTL alignment in Jira",
  "permissions": [ "declarativeContent", "activeTab", "storage" ],
  "background": {
    "scripts": [ "background.js" ],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/JiraRtl16.png",
      "32": "images/JiraRtl32.png",
      "48": "images/JiraRtl48.png",
      "128": "images/JiraRtl128.png"
    }
  },
  "options_page": "options.html",
  "icons": {
    "16": "images/JiraRtl16.png",
    "32": "images/JiraRtl32.png",
    "48": "images/JiraRtl48.png",
    "128": "images/JiraRtl128.png"
  },
  "manifest_version": 2
}